<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:gravity="center"
        android:background="@drawable/back_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <TextView
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick location" />
    <TextView
        android:layout_gravity="center"
        android:layout_width="267dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:padding="2dp"
        android:textColor="#F2A6A6A6"
        android:layout_height="wrap_content"
        android:text="Find the area or city that you want to know the detailed weather info at this time" />


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="260dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="11dp"
        android:layout_height="50dp"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="25dp"
        card_view:cardBackgroundColor="#800C397C"
        card_view:cardElevation="0dp">


    <EditText
        android:id="@+id/ed_inputData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:background="#00FFFFFF"
        android:layout_marginLeft="22dp"
        android:drawablePadding="18dp"
        android:gravity="left|center"
        android:hint="Search"
        android:drawableLeft="@drawable/search_interface_symbol"
        android:textColor="@color/white"
        android:textColorHint="#59DFDFDF"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_getCityID" />
    </androidx.cardview.widget.CardView>


</LinearLayout>